{{- define "post"}}
    {{- $domain:=.Meta.SiteDomain}}
    <article class="post-single">
        <header class="post-header">
            <h1 class="post-title">
                {{- .Title }}
            </h1>
            <div class="post-meta">
                {{template "post_meta" .}}
            </div>
        </header>
        <div class="post-content">
            {{- .Content | unescape }}
        </div>
        <footer class="post-footer">
            {{- if .Tags }}
                <ul class="post-tags">
                    {{- range $index, $tag :=  .Tags }}
                        <li><a href="{{- $domain}}/tag/{{- $tag}}/">{{- $tag }}</a></li>
                    {{- end }}
                </ul>
            {{- end }}
            <nav class="paginav">
                {{- if (ne .PrevPage.Title "") }}
                    <a class="prev" href="{{- $domain}}/archives/{{- .PrevPage.ID}}/">
                        <span class="title">Â« PREV PAGE</span>
                        <br>
                        <span>{{ .PrevPage.Title }}</span>
                        <div></div>
                    </a>
                {{- end }}
                {{- if (ne .NextPage.Title "") }}
                    <a class="next" href="{{- $domain}}/archives/{{- .NextPage.ID}}/">
                        <span class="title">NEXT PAGE Â»</span>
                        <br>
                        <span>{{ .NextPage.Title }}</span>
                        <div></div>
                    </a>
                {{- end }}
            </nav>
        </footer>
